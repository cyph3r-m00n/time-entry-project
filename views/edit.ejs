<% include ./partials/header %>
<%var timeLink = timeEntry.date.replace(/-/g, '_')%>

<form id="timeentryform" action="/home/dates/<%= timeLink%>/<%= timeEntry._id%>?_method=PUT" class="form-signin" method="POST">

    <img id="logoimg" class="mb-4" src="https://i.ibb.co/WyNjT67/Fox-Wyndrum-Logo-Small.jpg" alt="" >
    <div class="fwabordercolor">
    
    <h1 class="h3 mb-3 font-weight-light">Edit time entry</h1>
    <input class="form-control" type="date" name="timeEntry[date]" value="<%= timeEntry.date %>" placeholder ="DATE :MM/DD/YYYY" required>
    <input class="form-control" type="text" name="timeEntry[cust]" value="<%= timeEntry.cust %>" placeholder ="Customer: FOX001">
    <input class="form-control" type="text" name="timeEntry[ftcn]" value="<%= timeEntry.ftcn %>" placeholder ="FTCN: SUP">
    <input class="form-control" type="text" name="timeEntry[billcode]" value="<%= timeEntry.billcode %>" placeholder ="BILL CODE: BIT">
    <input class="form-control" type="text" name="timeEntry[job]" value="<%= timeEntry.job %>" placeholder ="Job Number">
    <input class="form-control" type="text" name="timeEntry[agr]" value="<%= timeEntry.agr %>"  placeholder = "AGR">
    <input class="form-control" type="time" name="timeEntry[starttime]" value="<%= timeEntry.starttime %>" placeholder ="TIME TO/FROM: 2:00 PM to 3:00 PM" required>
    <input class="form-control" type="time" name="timeEntry[endtime]" value="<%= timeEntry.endtime %>" placeholder ="TIME TO/FROM: 2:00 PM to 3:00 PM" required>
    <input class="form-control" type="number" name="timeEntry[totaltime]" value="<%= timeEntry.totaltime %>" placeholder ="TOTAL TIME: 1 " step="0.25" required>
    <input class="form-control" type="text" name="timeEntry[mco]" value="<%= timeEntry.mco %>" placeholder ="MCO: Client">
    <input class="form-control" type="text" name="timeEntry[description]" value="<%= timeEntry.description %>" placeholder ="The Cat Jumped over the Hat">
    <div class="bothbuttons2">
    <button class="btn btn-sm btn-outline-primary btn-spacing">Submit</button>
    <a href="javascript:history.back()" class="btn btn-sm btn-outline-danger ">Cancel</a>
</div>
    </div>
  </form>




<% include ./partials/footer %>