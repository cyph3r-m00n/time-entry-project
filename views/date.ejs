<% include partials/header %>
<% var mainTimeLink = timeentries[0].date.replace(/-/g, '_');%>
<div class="container">
    <div class="row">
        <div>
            <a class="btn btn-m" href="/home/">Go Back</a>
        </div>
        <div class="col-lg-12">
            <h4>Click <a href="/home/<%= mainTimeLink%>/print">here</a> to view printable format for this day.</h4>
            <h4>Below are your time Entries:</h4>
        </div>

    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% timeentries.forEach(function(timeentry){%> 
            <%var timeLink = timeentry.date.replace(/-/g, '_')%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <div class="caption">
                        <h4><%= timeentry.date %></h4>
                        <% var startDate = new Date(timeentry.starttime) %>
                        <% var endDate = new Date(timeentry.endtime) %>
                        <span><h4><%= startDate %> to <%= endDate %></h4></span>
                    </div>
                    <p>
                        <a href="/home/<%=timeLink %>/<%= timeentry._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<% include partials/footer %>