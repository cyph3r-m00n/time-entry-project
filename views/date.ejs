<% include partials/header %>
<main role="main">

    <section class="jumbotron text-center jumbocss jumboheight">
      <div class="container">
        <div class="row">
            <div class="col-sm fwabordercolor" >
        <h1>Time Management Application</h1>
        <hr>
        <p class="lead text-muted">Here you can see time entries grouped by day, and you can create a time entry, or delete all time entries.</p>
        <p>
          <div class="bothbuttons">
            <a href="/home/new" class="btn btn-sm btn-outline-primary btn-spacing">Create Entry</a>
            <form class="delete-form" action="/home?_method=DELETE" method="POST" onclick="return confirm('This will delete all Time Entries.');" > 
              <button class="btn btn-sm btn-outline-danger btn-spacing">Delete All</button>
            </form>
          </div>
          
        </p>
    </div>

      </div>

    </div>
    </section>
    <p>
        <div class="page-header mainHeading bothbuttons3">
            <p><a href="/home"><i class="fa fa-angle-left" aria-hidden="true"></i></a> Individual Time Entries</p>

        </div>
    </p>

  
    <div class="album py-5  bcolor" >
      <div class="container">
  
        <div class="row">
          <% timeentries.sort() %>
            <% timeentries.forEach(function(timeentry){%> 
                <%var timeLink = timeentry.date.replace(/-/g, '_')%>
          <div class="col-md-4">
            <div class="card shadow-sm fwabordercolor cardcss">
              <div class="card-body">
                  <p class="card-text">Date: <%= timeentry.date %></p>
                  <p class="card-text">Customer: <%= timeentry.cust %></p>
                  <p class="card-text">Time: <%= timeentry.starttime %> to <%= timeentry.endtime %></p>
                  <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a href="/home/dates/<%=timeLink %>/<%= timeentry._id %>" class="btn btn-sm btn-outline-primary btn-spacing">View</a>
                    <form class="delete-form" action="/home/dates/<%= timeLink %>/<%= timeentry._id %>?_method=DELETE""/ method="POST" onclick="return confirm('This will delete the Time Entry.');"> 
                      <button class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  
  </main>
<% include partials/footer %>